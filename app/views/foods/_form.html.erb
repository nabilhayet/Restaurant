<%= form_for [@admin, @food] do |f| %>
<% if @food.errors.any? %>
<div id="error_explanation">
  <h2>There were some errors:</h2>
  <ul>
    <% @food.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="content">
  <h3> To add a new food fill out the fields below :</h3>
  <br>
  <%= f.hidden_field :admin_id %>
  <br> 
<label>Food name:</label>
<%= f.text_field :name %>
<br>
<br>
<label>Food Category:</label><br>
<%= f.text_field :category %>
<br>
<br>
<label>Food fat</label><br>
<%= f.number_field :fat %>
<br>
<br>
<label>Food calories</label><br>
<%= f.number_field :calories %>
<br>
<br>
<%= f.button "Make a Food", :class => 'btn' %>
<% end %>